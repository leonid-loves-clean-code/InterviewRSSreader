<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/item_added"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_add_feed_margin_top"
        android:layout_marginLeft="@dimen/dialog_add_feed_margin_left"
        android:layout_marginRight="@dimen/dialog_add_feed_margin_right"
        android:layout_marginBottom="@dimen/dialog_add_feed_margin_bottom"
        android:hint="@string/hint_add_feed" />

</LinearLayout>